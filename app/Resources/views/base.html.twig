<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block title %}
            <title>Collectors</title>
        {% endblock %}

        {% block stylesheet %}
            {% stylesheets '@BraincraftedBootstrapBundle/Resources/less/*' filter ='cssrewrite'%}
            <link rel="stylesheet" href="{{ path('_assetic_bootstrap_css') }}" />
            {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
    {% block body %}
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('app_default_index') }}">Collectors app</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="{{ path('create-catalog') }}">New catalog</a>
                        </li>
                        <li>
                            <a href="#">Something</a>
                        </li>
                        <li>
                            <a href="#">Something else</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>
    <div class="container">
        <div class="row row-offcanvas row-offcanvas-right">
            <div class="col-xs-12 col-sm-9">
                <p class="pull-right visible-xs">
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                </p>
            </div><!--/.col-xs-12.col-sm-9-->
        </div><!--/row-->
    </div>

        {% block content %}
        {% endblock %}
    <div class="container">
        <hr>
            <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>&copy; Santa & and her curly hands</p>
                </div>
            </div>
        </footer>
    </div>

    {% endblock %}

    {% block javascripts %}
        {% javascripts %}
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
        {% endjavascripts %}

    {% endblock %}
    </body>
</html>