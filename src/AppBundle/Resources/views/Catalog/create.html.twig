{% extends 'base.html.twig' %}



{% block content%}
    <div class="container">
        <div class="row col-lg-6 col-md-offset-3">
            <form>
                <div>
                    <div class="col-lg-12">
                        {{ form_row(form.name) }}
                    </div>

                    <div class="col-lg-12">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="col-lg-12">
                        {{ form_row(form.startDate) }}
                    </div>

                    <div class="col-lg-12">
                        {{ form_row(form.category) }}
                    </div>
                    <div class="col-lg-12">
                        {{ form_label(form.items) }}
                        <ul class="items" data-prototype="{{ form_widget(form.items.vars.prototype)|e }}">
                        </ul>
                    </div>
                    {{ form_rest(form) }}
                </div>
                <div class="col-lg-6 col-md-offset-3">
                    <button class="btn btn-default" type="submit">Create catalog</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

