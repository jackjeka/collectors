{% extends '@App/Catalog/create.html.twig' %}

{% block content %}

    <div class="col-lg-12">
        <form action="#" method="POST">
            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.description) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.startDate) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.category) }}
            </div>

            <div class="col-lg-12">
                <div class="col-lg-12">
                    {{ form_label(form.items) }}
                    <ul class="items" data-prototype="{{ form_widget(form.items.vars.prototype)|e }}">
                    </ul>
                </div>
            </div>
            
            {{ form_rest(form) }}

            <div class="col-lg-12">
                <button type="submit" class="btn btn-default">Ok</button>
            </div>
        </form>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}

