{% extends 'base.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            {% for catalog in catalogs %}
                <div class="col-sm-4 col-lg-4 col-md-4 thumbnail">
                    <div class="caption">
                        <a href="#">
                            <h3>{{ catalog.name }}</h3>
                        </a>
                        <a href="{{ path('catalogs_show', {'id' : catalog.id}) }}">
                            <p>{{ catalog.description | slice (0, 150)}} </p>
                        </a>
                    </div>

                    <div class="col-lg-10 col-md-offset-1 panel panel-default">
                        <div class="panel-body">
                            Recent items in this collection
                        </div>

                        <div class="list-group">
                            {%  for item in catalog.items%}
                                <a href="{{ path('items_show', {'id': item.id}) }}" class="list-group-item">{{ item.name }}</a>
                            {% endfor %}
                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}