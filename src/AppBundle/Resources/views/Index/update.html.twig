{% extends '@App/Catalog/create.html.twig' %}

{% block content %}

    <div class="col-lg-12">
        <form action="#" method="POST">
            {{ form_start(form) }}
            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.description) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.startDate) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.category) }}
            </div>

            {{ form_row(form._token) }}

            <div class="col-lg-12">
                <button type="submit" class="btn btn-default">Save it</button>
            </div>
        </form>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}

